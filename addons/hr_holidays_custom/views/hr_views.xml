<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <!-- Hr employee inherit Legal Leaves -->
    <record id="view_holiday_custom_employee_form_leave_inherit" model="ir.ui.view">
        <field name="name">hr.holiday.custom.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <!--<field name="inherit_id" ref="hr.view_employee_form"/>-->
        <field name="inherit_id" ref="hr_holidays.view_employee_form_leave_inherit"/>
        <field name="arch" type="xml">
            <!--<field name="remaining_leaves" position="after">
                <field name="sick_leaves_count"/>
            </field>-->
            <xpath expr="//group[@groups='base.group_no_one']" position="replace">
                <group string="Leaves">
                    <label for="remaining_leaves"/>
                    <div>
                        <field name="remaining_leaves" class="oe_inline"/> days
                    </div>
                    <label for="sick_leaves_count"/>
                    <div>
                        <field name="sick_leaves_count" class="oe_inline"/> days
                    </div>
                </group>
            </xpath>
            <!--<button name="%(hr_holidays.act_hr_employee_holiday_request)d" position="after">
                <field name="show_leaves" invisible="1"/>
                <button name="%(hr_holidays.act_hr_employee_holiday_request)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-calendar"
                        attrs="{'invisible': [('show_leaves','=', False)]}"
                        groups="base.group_user"
                        help="Sick leaves">
                    <field string="Sick Leaves Counter" name="sick_leaves_count" widget="statinfo"/>
                </button>
            </button>-->
        </field>
    </record>
</odoo>