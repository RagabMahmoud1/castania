<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_hr_daily_attendance_report_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Daily Report - Details and Totals </h2>
                        From: <span t-esc="doc.date_from"/> To: <span t-esc="doc.date_to"/>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th rowspan="2">Date</th>
                                    <th colspan="3">Booking</th>
                                    <th rowspan="2">Status</th>
                                    <th colspan="2">Duty</th>
                                    <th rowspan="2">Nbr Of Hours</th>
                                    <th colspan="11">Selected Types</th>
                                    <th rowspan="2">Total</th>
                                </tr>
                                <tr>
                                    <th>In</th>
                                    <th>Out</th>
                                    <th>Cumulative</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>ABS</th>
                                    <th>ANL</th>
                                    <th>OVS</th>
                                    <th>OV1</th>
                                    <th>OVH</th>
                                    <th>PRS</th>
                                    <th>UPL</th>
                                    <th>ABD</th>
                                    <th>AUL</th>
                                    <th>SNA</th>
                                    <th>UPH</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Data Rows -->
                                <t t-foreach="doc.line_ids2" t-as="line">
                                    <tr>
                                        <td><span t-esc="line.date"/></td>
                                        <td><span t-esc=""/></td>
                                        <td><span t-esc="line.booking_out"/></td>
                                        <td><span t-esc="line.cumulative"/></td>
                                        <td><span t-esc="line.status"/></td>
                                        <td><span t-esc="line.duty_from"/></td>
                                        <td><span t-esc="line.duty_to"/></td>
                                        <td><span t-esc="line.number_of_hours"/></td>
                                        <td><span t-esc="line.abs"/></td>
                                        <td><span t-esc="line.anl"/></td>
                                        <td><span t-esc="line.ovs"/></td>
                                        <td><span t-esc="line.ov1"/></td>
                                        <td><span t-esc="line.ovh"/></td>
                                        <td><span t-esc="line.prs"/></td>
                                        <td><span t-esc="line.upl"/></td>
                                        <td><span t-esc="line.abd"/></td>
                                        <td><span t-esc="line.aul"/></td>
                                        <td><span t-esc="line.sna"/></td>
                                        <td><span t-esc="line.uph"/></td>
                                        <td><span t-esc="line.total"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- A3 paper format -->
    <record model="report.paperformat" id="paperformat_a3">
        <field name="name">A3</field>
        <field name="default" eval="True"/>
        <field name="format">A3</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="True"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>


    <record id="action_report_hr_daily_attendance" model="ir.actions.report">
        <field name="name">Hr Daily Attendance Report</field>
        <field name="model">hr.daily.attendance.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">attendance_report.report_hr_daily_attendance_report_view</field>
        <field name="report_file">attendance_report.report_hr_daily_attendance_report</field>
        <field name="print_report_name">'%s' % object.employee_id.name</field>
        <field name="binding_model_id" ref="model_hr_daily_attendance_report"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_a3"/>
    </record>



</odoo>